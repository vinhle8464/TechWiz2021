@model TechWizProject.Models.FoodRating;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.css">
    <link rel="stylesheet" href="~/css/templatemo_style.css">
    <link rel="stylesheet" href="~/css/templatemo_misc.css">
    <link rel="stylesheet" href="~/css/flexslider.css">
    <link rel="stylesheet" href="~/css/testimonails-slider.css">
    <link rel="stylesheet" href="~/css/style.css">

    <script src="~/js/vendor/modernizr-2.6.1-respond-1.1.0.min.js"></script>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <img src="~/images/pizzahut.jpg" class="img-fluid rounded mx-auto d-block " style="height: 450px; width: 1000px;" alt="">
        <img src="~/images/pizzahutlogo.png" class="rounded mx-auto d-block mx-50" alt="">
        <h1 class="text-center"> Restaurant Title</h1>
        <h6 class="card-subtitle text-center mb-2 text-muted">04/27/2021</h6>
        <h6 class="text-center" style="color: green;"><i class="fa fa-check-circle" aria-hidden="true"></i> Order deliveried</h6>
        <h3 class="text-center">Please Rate Restaurants Service</h3>
        <div class="container-fluid">
            <div class="d-flex justify-content-center rated">
                <i class="fa fa-star-o cl-star"></i>
                <i class="fa fa-star-o cl-star"></i>
                <i class="fa fa-star-o cl-star"></i>
                <i class="fa fa-star-o cl-star"></i>
                <i class="fa fa-star-o cl-star"></i>
            </div>
        </div>
        <div class="form-group">
            <form method="post" asp-controller="foodrating" asp-action="rating">
                <input type="hidden" value="@ViewBag.id" asp-for="FoodId" />
                <textarea type="text" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write review" asp-for="Comment">
            </textarea> <button type="submit" class="btn btn-primary">Comment</button>
            </form>
        </div>
    </div>
    <script src="~/js/vendor/jquery-1.11.0.min.js"></script>
    <script src="~/js/vendor/jquery.gmap3.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
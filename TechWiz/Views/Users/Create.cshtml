@model TechWizProject.Models.User

@{
    ViewData["Title"] = "Create";

}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <title>Login Admin</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="box-form__login">
        <div class="box-login">
            <div class="login-title">
                <h1>Sign Up</h1>
                <h2>Food<strong class="name-project">Mate</strong></h2>
            </div>
            <form method="post" asp-controller="Users" asp-action="create" class="form-login">
                <hr>
                <div class="form-group">
                    <input type="email" class="form-control input-control" asp-for="Email" placeholder="Email" required/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control input-control" placeholder="Password" required asp-for="Password"/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-control" placeholder="FirstName" asp-for="FirstName" required/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-control" placeholder="LastName" asp-for="LastName" required/>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-2">Create Account</button>
            </form>
            <p class="mt-3 mb-1 text-center">Already have an account? <strong><a asp-controller="home" asp-action="login">Login here</a></strong></p>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
